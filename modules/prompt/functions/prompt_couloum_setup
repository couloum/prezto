#
# A single line theme with Git information on the left and Ruby on the right.
#
# Authors:
#   Florian Coulmier <florian@coulmier.fr>
#
# Screenshots:
#

function prompt_couloum_precmd {
  # Get Git repository information.
  if (( $+functions[git-info] )); then
    git-info
  fi
}

function prompt_couloum_setup {
  setopt LOCAL_OPTIONS
  unsetopt XTRACE KSH_ARRAYS
  prompt_opts=(cr percent subst)

  # Load required functions.
  autoload -Uz add-zsh-hook

  # Add hook to set up prompt parameters before each command.
  add-zsh-hook precmd prompt_couloum_precmd
  
  if [ "$USER" = "root" ]; then
    HOSTNAMECOLOR="red"
  else
    HOSTNAMECOLOR="magenta"
  fi

  # Set git-info parameters.
  zstyle ':prezto:module:git:info' verbose 'yes'
  zstyle ':prezto:module:git:info:branch' format "${_prompt_couloum_colors[1]}%b%f"
  zstyle ':prezto:module:git:info:added' format "${_prompt_couloum_colors[5]}●%f"
  zstyle ':prezto:module:git:info:deleted' format "${_prompt_couloum_colors[2]}●%f"
  zstyle ':prezto:module:git:info:modified' format "${_prompt_couloum_colors[4]}●%f"
  zstyle ':prezto:module:git:info:untracked' format "${_prompt_couloum_colors[3]}●%f"
  zstyle ':prezto:module:git:info:keys' format 'prompt' '(%b%d%a%m%u)'

  # Define prompts.
  PROMPT="%F{blue}<%F{cyan}%T%F{blue}>[%F{$HOSTNAMECOLOR}%m%F{blue}:%F{yellow}%4~%F{blue}]"'${git_info:+${(e)git_info[prompt]}}'"%F{white}%# "
  #RPROMPT='%F{blue}${ruby_info[version]}'
}

prompt_couloum_setup "$@"
